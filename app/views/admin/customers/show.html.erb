<main>
  <div class= "container px-5 px-sm-0">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h4>会員詳細</h4>
          <table class="table">
             <tr>
               <th>会員ID</th>
                <th><%=@customer.id %></th>
             </tr>
             <tr>
               <th>氏名</th>       
               <th><%=@customer.first_name+@customer.last_name %></th>
             </tr>
             <tr>
               <th>フリガナ</th>        
               <th><%=@customer.first_name_kana+@customer.last_name_kana %></th>
             </tr>
             <tr>
               <th>電話番号</th>     
               <th><%=@customer.telephone_number %></th>
             </tr>        
             <tr>
                <th>メールアドレス</th>    
                <th><%=@customer.email %></th>
             </tr>
          </table>
            <%= link_to "編集する",  edit_admin_customer_path(@customer.id) %>
      </div>
    </div>         
  </div>
</main>    