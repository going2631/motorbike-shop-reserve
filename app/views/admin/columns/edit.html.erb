<main>
  <div class= "container px-5 px-sm-0">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>コラム編集</h1>

            <%= form_with model: @column, url: admin_column_path,  method: :patch, local:true do |f| %>
                
              <div class="form-group">  
                <label for="colum_image">画像</label>
                  <%= f.attachment_field :image %>
              </div> 
              <div class="form-group"> 
                <label for="column_title">タイトル</label> 
                  <%= f.text_field :title,autofocus: true, id:"inputTitle", placeholder:"タイトル" %>
              </div>
              <div class="form-group">
                <label for="column_text">本文</label>
                  <%= f.text_area :text,id:"inputText", placeholder:"本文" %>
              </div>
    
              <div class="form-group">          
                 <%= f.submit '新規登録' %>
              </div>    
            <% end %>
      </div>
    </div>       
  </div>        
</main>