<main>
  <div class= "container px-5 px-sm-0">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>コラム投稿</h1>

            <%= form_with model: @column, url: admin_columns_path,  method: :post, local:true do |f| %>
                
              <div class="form-group">  
                <label for="colum_image">画像</label>
                  <%= f.attachment_field :image %>
              </div> 
              <div class="form-group"> 
                <label for="column_title">タイトル</label> 
                  <%= f.text_field :title, placeholder:"タイトル" %>
              </div>
              <div class="form-group">
                <label for="column_text">本文</label>
                  <%= f.text_area :text, placeholder:"本文" %>
              </div>
              <div class="form-group">
                <label for="column_tag">タグ</label>
                   <%= f.text_area :tag_name, placeholder:"タグ" %>
              </div>
                   
                   
              <div class="form-group">          
                 <%= f.submit '新規登録' %>
              </div>    
            <% end %>
      </div>
    </div>       
  </div>        
</main>