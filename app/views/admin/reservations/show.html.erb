<main>
  <div class= "container px-5 px-sm-0">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h4>予約詳細</h4>
        
        <div class="form-group">  
           <label for="reservation_time">予約日時</label>
             <%= @reservation.start_time+"〜"+@reservation.finish_time %>
        </div>
        <div class="form-group">  
           <label for="reservation_manufacturer">メーカー</label>        
             <%= @reservation.manufacturer %>
        </div>
        <div class="form-group">  
           <label for="reservation_name">車名</label>        
             <%= @reservation.name %>
        </div>
        <div class="form-group">  
           <label for="reservation_displacement">排気量</label>        
             <%= @reservation.displacement+"ccc" %>
        </div>        
        <div class="form-group">  
           <label for="reservation_inquirie">その他要望事項</label>        
             <%= @reservation.inquirie %>
        </div>
            <%= link_to "編集する", edit_admin_reservation_path(@reservation.id) %>
      </div>
    </div>         
  </div>
</main>    