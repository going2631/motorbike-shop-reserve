<main>
  <div class= "container px-5 px-sm-0">
     <div class="col-md-8 offset-md-1">
       <h3>商品一覧</h3>
         <div class=row>
           <table class="table table-hover table-inverse">
             <thead>
               <tr>
                 <th>サービスID</th>
                 <th>サービス名</th>
                 <th>施工目安時間</th>
                 <th>施工目安金額</th>
                 <th></th>
                 <th colspan="５"></th>
               </tr>
             </thead>
             <tbody>
               <% @services.each do |service|%>
                 <tr>
                  <td><%= service.id%></td>
                  <td><%= service.name %></td>
                  <td><%= service.time %></td>
                  <td><%= service.price %></td>
                  <td><%= link_to "詳細", service_path(service.id)%></td>
                 </tr>
               <% end %>
             </tbody> 
           </table>
      </div>
    </div>         
  </div>
</main>