<main>
  <div class= "container px-5 px-sm-0">
     <div class="col-md-8 offset-md-1">
       <h3> </h3>
       <h3>コラム一覧</h3>
       <div class="search-form">
         <%= form_with url: columns_path, method: :get, local: true do |f| %>
           <%= f.text_field :keyword, value: @keyword %>
           <%= f.submit "検索" %>
         <% end %>
       </div>
         <div class=row>
           <table class="table table-hover table-inverse">
             <thead>
               <tr>
                 <th>投稿ID</th>
                 <th>画像</th>
                 <th>タイトル</th>
                 <th></th>
                 <th colspan="4"></th>
               </tr>
             </thead>
             <tbody>
               <% @columns.each do |column|%>
                 <tr>
                  <td><%= column.id%></td>
                  <td><%= attachment_image_tag column, :image, :fill, 200, 200, format: 'jpeg' %></td>
                  <td><%= column.title %></td>
                  <td><%= link_to "詳細", column_path(column.id)%></td>
                 </tr>
               <% end %>
             </tbody> 
           </table>
      </div>
    </div>         
  </div>
</main>