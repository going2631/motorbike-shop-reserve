<main>
  <div class= "container px-5 px-sm-0">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>予約登録</h1>

            <%= form_with model: @reservation, url: reservations_path,  method: :post, local:true do |f| %>
                
              <div class="form-group"> 
                <label for="reservation_manufacturer">メーカー</label> 
                  <%= f.text_field :manufacturer, placeholder:"サービス名" %>
              </div>
              <div class="form-group">
                <label for="reservation_name">車名</label>
                  <%= f.text_area :introduction, placeholder:"ここに説明文を記載します" %>
              </div>
              <div class="form-group">    
                <label for="reservation_displacement">排気量</label>
                　<%= f.datetime_field:displacement, placeholder:"2：00" %>
              </div>
              <!--<div class="form-group">    -->
              <!--  <label for="reservation_">その他要望事項</label>-->
              <!--  　<%#= f.text_area:, placeholder:"要望事項" %>-->
              <!--</div>-->
              
              <div class="form-group">    
                <label for="reservation_start_time">希望時間</label>
                　<%= f.datetime_field :start_time, placeholder:"2：00" %>
              </div>
              
              <div class="form-group">
                　<%= f.hidden_field :service_id, value: %>
              </div>
              
              <div class="form-group">          
                 <%= f.submit '新規登録' %>
              </div>    
            <% end %>
      </div>
    </div>       
  </div>        
</main>